<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Properties>
        <property name="pattern_file">%d{HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n</property>
    </Properties>
    <Appenders>
        <File name="FirstFile" fileName="src\main\resources\logs\app.txt" bufferedIO="true">
            <PatternLayout pattern="${pattern_file}"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="Log_File" level="trace" additivity="false">
            <AppenderRef ref="FirstFile"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="FirstFile"/>
        </Root>
    </Loggers>
</Configuration>